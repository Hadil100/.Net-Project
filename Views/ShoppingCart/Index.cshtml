@model MyNewProject.ViewModels.CartViewModel

<h2>Your Shopping Cart</h2>

@if (Model.CartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ProductImage</th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                var photoPath = "~/images/" + (item.ProductPath ?? "noimage.jpg");
                <tr>

                    
                    <td><img src="@photoPath" width="360" height="360" /></td>

                    <td>@item.ProductName</td>
                    <td>@(item.Price.ToString("C", new System.Globalization.CultureInfo("fr-TN")))</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("C", new System.Globalization.CultureInfo("fr-TN")))</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td>@(Model.TotalPrice.ToString("C", new System.Globalization.CultureInfo("fr-TN")))</td>
                <td>
                    <a asp-action="ClearCart">Clear Cart</a>
                </td>
            </tr>
        </tfoot>
    </table>

}
else
{
    <p>Your cart is empty.</p>
}

<a asp-controller="User" asp-action="Index">Continue Shopping</a>
