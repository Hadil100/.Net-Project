@model MyNewProject.Models.Product

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.Image ?? "noimage.jpg");
}
<style>
    body {
        background-color: #ffe6ff; 
        height: 100vh;
        margin: 0;
    }

    label.control-label {
        font-weight: bold;
    }

    .custom-file-input {
        cursor: pointer;
    }

    .btn-primary {
        margin-right: 10px;
    }
</style>
<h1>Details of this Product</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Designation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Designation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt class="col-sm-2">
            <label><b>Image</b> </label>
        </dt>
        <dd class="col-sm-10">
            <div class="card-body text-left">
                <img src="@photoPath" asp-append-version="true" height="100" width="100" />
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
