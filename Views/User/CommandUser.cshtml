@model IEnumerable<Command>

<style>
    body {
        background-color: #ffe6ff; 
        height: 100vh;
        margin: 0;
    }

    label.control-label {
        font-weight: bold;
    }

    .custom-file-input {
        cursor: pointer;
    }

    .btn-primary {
        margin-right: 10px;
    }

    .btn-research {
        background-color: #8B008B; 
        color: white; 
        padding: 10px 20px; 
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>

<h2>Your Command Details</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Command Number</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        
        <tbody>
        @{
                var x = 0;
            }
            @foreach (var item in Model)
            {
                
                <tr>
                    <td>@(x+1)</td>
                    <td>@item.status</td>
                    <td>@((item.Total).ToString("C", new System.Globalization.CultureInfo("fr-TN")))</td>
                </tr>
                x++;
            }
        </tbody>
    </table>
}
else
{
    <p>No Commands</p>
}

<button class="btn btn-research" onclick="location.href='@Url.Action("Index", "User")'">Continue Shopping</button>
